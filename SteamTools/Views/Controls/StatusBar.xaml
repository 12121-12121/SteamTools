<UserControl x:Class="SteamTools.Views.Controls.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SteamTools.Views.Controls"
            xmlns:metro="http://schemes.grabacr.net/winfx/2014/controls"
            xmlns:pages="clr-namespace:SteamTools.Views.Pages"
            xmlns:vm="clr-namespace:SteamTools.ViewModels"
            xmlns:res="clr-namespace:SteamTools.Properties"
            xmlns:services="clr-namespace:SteamTools.Services"
            xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
            mc:Ignorable="d"
            d:DesignHeight="25" d:DesignWidth="780">
    <Grid Grid.Row="2" Background="{DynamicResource AccentBrushKey}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="23" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding NotificationMessage}" FontFamily="MicroSoft YaHei" VerticalAlignment="Center" Padding="6" Style="{DynamicResource DefaultTextStyleKey}" Foreground="{DynamicResource AccentForegroundBrushKey}"></TextBlock>
        <!--<ContentControl Grid.Column="1"
						Content="{Binding}">
        </ContentControl>-->
        <metro:CaptionButton Grid.Column="2"
                                 ToolTip="{Binding Path=NotificationNum,StringFormat=Resources.NotificationString,Source={x:Static services:ResourceService.Current}, Mode=OneWay}"
								 Style="{DynamicResource StatusButtonStyleKey}" >
            <svgc:SvgViewbox IsHitTestVisible="False"  Source="pack://application:,,,/Resources/Asstes/bell.svg" Width="11" />
        </metro:CaptionButton>
        <metro:ResizeGrip Grid.Column="3" />
    </Grid>
</UserControl>
