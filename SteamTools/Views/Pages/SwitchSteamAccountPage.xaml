<UserControl x:Class="SteamTools.Views.Pages.SwitchSteamAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:viewModel="clr-namespace:SteamTools.ViewModels"
      xmlns:prop="clr-namespace:SteamTools.Properties"
      xmlns:metro="http://schemes.grabacr.net/winfx/2014/controls"
      mc:Ignorable="d" 
	  d:DesignWidth="800"
      d:DataContext="{d:DesignInstance viewModel:SwitchSteamAccountPage}"
      Background="{DynamicResource ThemeBrushKey}"
      >
    <ItemsControl
            Foreground="{DynamicResource HighlightForegroundBrushKey}"
            Name="UserList" 
            ItemsSource="{Binding SteamUsers}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <StackPanel Margin="10">
                    <DockPanel>
                        <Image Source="{Binding AvatarFull}" Width="64" Height="64"></Image>
                        <Separator Opacity="0" Width="30"/>
                        <TextBlock Text="{Binding PersonaName}"
                                       VerticalAlignment="Center" FontSize="24"
                                       TextAlignment="Center" Width="Auto"/>
                        <Separator Opacity="0" Width="30"/>
                        <TextBlock Text="{Binding LastLoginTime,StringFormat={x:Static prop:Resources.LastloginTime}}"
                                       VerticalAlignment="Center" FontSize="14"
                                       TextAlignment="Center" Width="Auto"/>
                        <Button HorizontalAlignment="Right" Height="30">以当前帐户登录</Button>
                    </DockPanel>

                    <Rectangle Height=".99"
									   Fill="{DynamicResource InactiveForegroundBrushKey}"
									   Margin="0,8" />
                </StackPanel>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
